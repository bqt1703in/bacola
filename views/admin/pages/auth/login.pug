doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title #{pageTitle}
    link(href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet")
  body
    .container
      .row.justify-content-center
        .col-md-6
          .card.mt-5
            .card-header.text-center
              h3 Đăng nhập
            .card-body
              form(action="/admin/auth/login" method="POST")
                .form-group
                  label(for="email") Email
                  input#email.form-control(type="email" name="email" placeholder="Nhập email")
                .form-group
                  label(for="password") Mật khẩu
                  input#password.form-control(type="password" name="password" placeholder="Mật khẩu")
                button.btn.btn-primary.btn-block(type="submit") Đăng nhập
            .card-footer.text-center
              small &copy; 2024 Your Company. All rights reserved.
            -if(messages.error)
                .alert.alert-danger.mt-3 #{messages.error}
    script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js")
    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")
